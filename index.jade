doctype html

html
	head
		script(src="https://code.jquery.com/jquery-1.11.3.min.js" defer="defer")
		script(type="application/javascript", src="js/parallax.min.js" defer="defer")
		link(rel="stylesheet", type="text/css", href="style/style.css")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		meta(charset="UTF-8") 
		title Валка

	body
		#wrap
			.parallax-window(data-parallax="scroll" data-image-src="https://lh3.googleusercontent.com/-NifB1g-AqRQ/VUmW3IaJR_I/AAAAAAAArWQ/Luw1CYaKt-0/w3840-h2400/log_stump_bark_light_49222_3840x2400.jpg")
				#header-wrap.page 
					#title
						.big Спил деревьев
						.small Пилим деревья в Крыму.

					#header.grid.row.items-stretch.s10-12
						#menu.grid.row.items-stretch.s2-5
							a.grid.row.items-center(href="./")
								span Главная
							a.grid.row.items-center(href="./examples.html")
								span Примеры
							a.grid.row.items-center(href="./#!calc")
								span Стоимость
						#phone.s3-5
							span 8 (800) 555-35-35

				#body-wrap.page
					#body.grid.column.s8-12
						.post.markdown-body
							include:supermarked content/index.md
			
			.parallax-window(data-parallax="scroll" data-image-src="img/wood-texture.jpg")
				#review-wrap.page
					#reviews.grid.row.s3-3
						include content/comments.jade
						- each item in comments
							.review.grid.row.items-center
								img(src=item.image width="128px" height="128px")
								.text!= item.text

				#phone-again-wrap.page
					#phone-again.grid.row.content-center.s3-3
						span.text Звоните,
						span.number 8 (800) 555-35-35

				#footer-wrap.page
					#footer.grid.row.content-center.s3-3
						| Веб-студия &nbsp;
						a(href="https://lampa.cc/?from=valka")
							| lampa.cc
