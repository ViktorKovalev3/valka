doctype html

html
	head
		link(rel="stylesheet", type="text/css", href="style/second.css")
		title Валка
		meta(name="viewport" content="width=device-width, initial-scale=1")
		meta(charset="UTF-8")

	body
		div#wrap.grid.column
			div#header-wrap.page 
				div#title
					div.big Спил деревьев
					div.small Пилим деревья в Крыму.

				div#header.grid.row.items-stretch.s8-12
					div#menu.grid.row.items-stretch.grow-3
						a.grid.row.items-center(href="#")
							div Главная
						a.grid.row.items-center(href="#")
							div Примеры
						a.grid.row.items-center(href="#")
							div Стоимость
					div#phone.grow-2 
						span 8 (800) 555-35-35  


			div#body-wrap.page
				div#body.grid.column.s8-12
					div.post.markdown-body
						include:supermarked content/index.md
			
			div#review-wrap.page
				div#reviews.grid.row.s3-3
					include content/comments.jade
					- each item in comments
						div.review.grid.row.items-center
							img(src=item.image width="128px" height="128px")
							div.text!= item.text

			div#phone-again-wrap.page
				div#phone-again.grid.row.content-center.s3-3
					span.text Звоните,
					span.number 8 (800) 555-35-35

			div#footer-wrap.page
				div#footer.grid.row.content-center.s3-3
					span Копирайт (c) 1991, html 1.0