doctype html

html
	head
		script(src="https://code.jquery.com/jquery-1.11.3.min.js" defer="defer")
		script(type="text/javascript", src="js/parallax.min.js" defer="defer")
		script(type="text/javascript", src="js/photoswipe.min.js" defer="defer")
		script(type="text/javascript", src="js/photoswipe-ui-default.min.js" defer="defer")
		script(type="text/javascript", src="js/popup.js" defer="defer")
		link(rel="stylesheet", type="text/css", href="style/style.css")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		meta(charset="UTF-8") 
		title Валка

	body
		#wrap
			.parallax-window(data-parallax="scroll" data-image-src="https://lh3.googleusercontent.com/-NifB1g-AqRQ/VUmW3IaJR_I/AAAAAAAArWQ/Luw1CYaKt-0/w3840-h2400/log_stump_bark_light_49222_3840x2400.jpg")
				#header-wrap.page 

					#header.grid.row.items-stretch.s10-12(itemtype="http://schema.org/Organization" itemscope="")
						#menu.grid.row.items-stretch.s2-5
							a.grid.row.items-center(href="#")
								| Главная
							a.grid.row.items-center(href="#")
								| Примеры
							a.grid.row.items-center(href="#")
								| Стоимость
						#phone.s3-5(itemprop="telephone")
							a(href="tel:+88005553535") 8 (800) 555-35-35

					#title
						.big Спил деревьев
						.small Пилим деревья в Крыму.

				#body-wrap.page
					#body.grid.column.s8-12
						.post.markdown-body
							include:supermarked content/examples.md
			
			.parallax-window(data-parallax="scroll" data-image-src="img/wood-texture.jpg")
				#review-wrap.page
					#reviews.grid.row.s3-3
						include content/examples.jade
						- each item in examples
							.review.grid.row.items-center
								a(href=item.image)
									img(src=item.previewImage width="128px" height="128px")
								.text!= item.text

				#phone-again-wrap.page
					#phone-again.grid.row.content-center.s3-3
						span.text Звоните,
						span.number 8 (800) 555-35-35

				#footer-wrap.page
					#footer.grid.row.content-center.s3-3
						span Копирайт (c) 1991, html 1.0
		include photoswipe.jade